{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npm run start:prod",
    "restartPolicyType": "ON_FAILURE"
  },
  "nixpacks": {
    "node": {
      "version": "20.x",
      "features": {
        "nodejs": {
          "nodeOptions": "--experimental-specifier-resolution=node"
        }
      }
    }
  }
}